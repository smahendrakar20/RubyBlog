<h1> Listing all the articles </h1>
<%= link_to 'Click here to create a new article', new_article_path%>
<br> <br>

<table>
    <tr>
        <th>Title</th>
        <th>Text</th>
        <th></th>
    </tr>

    <% @articles.each do |article| %>
        <tr>
            <td> <%= article.title %></td>
            <td> <%= article.text %></td>
            <td><%= link_to 'Show', article_path(article) %></td>
            <td><%= link_to 'Edit', edit_article_path(article)%>
            <td><%= link_to 'Delete', article_path(article),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %>
        </tr>
    <%end %>

</table>